<%- include("partials/header.ejs") %>
<main>
    <div class="container">
        <div class="row"><div class="col-12 m-4"> </div></div>
        <div class="row">
            <% if(data.length != 0) {%>
                <% for(var i=0; i<data.length; i++) {%>
                    <div class="col-lg-10 col-md-10 mx-auto bg-ligth">
                        <a class="fs-2 post-link fw-bold text-decoration-none" href="/post/<%= data[i].title%>/<%= data[i]._id %>" > <%= data[i].title %> </a>
                        <p class="mb-2"><%= data[i].subtitle %></p>
                        <hr class="mx-auto" style="opacity: 10%;"/>
                    </div>
                <% } %>
            <% } %>
        </div>
        <div class="text-end m-5">
            <a class="btn btn-dark justify-content-end" href="/add-post">New Post</a>
        </div>
      </div>
</main>
<%- include("partials/footer.ejs") %>